@*added @model IEnumerable<HubbleGalaxyHotelApp.Models.Room*@

@model IEnumerable<HubbleGalaxyHotelApp.Models.Room>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    h1 {
        color: darkblue;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Hubble Galaxy Hotel</h1>
</div>

<br />
<br />


<div class="card" style="width: 50rem;">
    <img src="https://i.imgur.com/VbQIyjw.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomFeatures)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerNight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomFeatures)
                </td>
                <td>
                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
